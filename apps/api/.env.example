# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development
LOG_LEVEL=debug

# Security
JWT_SECRET=your-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-secure-32-character-encryption-key-here-change-this-in-production

# PostgreSQL Connection
DATABASE_URL=postgres://postgres:password@localhost:5432/qarote

# Unique identifier for each production server instance
# This helps coordinate connections across multiple servers
NODE_ID=server-1

# API Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:8081

# Email Configuration
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=support@qarote.io
FRONTEND_URL=http://localhost:8080
# Portal frontend URL (optional - only required if portal registrations are enabled)
PORTAL_FRONTEND_URL=http://localhost:8081

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
# Stripe Price IDs
STRIPE_DEVELOPER_MONTHLY_PRICE_ID=price_
STRIPE_DEVELOPER_YEARLY_PRICE_ID=price_
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_

# Sentry Configuration
SENTRY_DSN=https://
SENTRY_ENABLED=false

# OAuth 2.0
GOOGLE_CLIENT_ID=your-secret-key

NOTION_API_KEY=your-notion-api-key
NOTION_DATABASE_ID=your-notion-database-id
NOTION_SYNC_ENABLED=false
# Deployment Mode
# Options: cloud, self-hosted
DEPLOYMENT_MODE=cloud

# Email Configuration
ENABLE_EMAIL=true
EMAIL_PROVIDER=resend
# SMTP Configuration (optional, for self-hosted deployments)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password

# Sentry Configuration
ENABLE_SENTRY=true

# OAuth Configuration
ENABLE_OAUTH=true

# Notion Configuration
ENABLE_NOTION=false

# NPM Package Version (for Sentry releases)
npm_package_version=1.0.0
