# Rabbit HQ Infrastructure Environment Configuration - Staging
# Copy this file to .env and configure your values

# ========================================
# Dokku Server Configuration
# ========================================

# Your Dokku server IP or hostname
DOKKU_HOST=your-server-ip

# Domain configuration
DOMAIN_BACKEND=staging-api.yourdomain.com
DOMAIN_FRONTEND=staging.yourdomain.com

# ========================================
# Backend Environment Variables
# ========================================
# These are mapped from back-end/.env.example

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=production
NODE_TLS_REJECT_UNAUTHORIZED=1
ENVIRONMENT=staging
LOG_LEVEL=info

# Security
JWT_SECRET=your-secure-staging-jwt-secret-change-this-now
ENCRYPTION_KEY=your-secure-32-char-staging-encrypt-key

# PostgreSQL Connection (will be auto-configured by Dokku)
DATABASE_URL=postgresql://postgres:password@localhost:5432/rabbit_scout_staging

# API Configuration
CORS_ORIGIN=https://staging.yourdomain.com
FRONTEND_URL=https://staging.yourdomain.com

# Email Configuration
RESEND_API_KEY=re_52VAUghc_3KMksqhYFwSPd7nr2UXSyNQh
FROM_EMAIL=support@yourdomain.com

# Stripe Configuration (TEST KEYS for staging)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_DEVELOPER_MONTHLY_PRICE_ID="price_developer_monthly_test"
STRIPE_DEVELOPER_YEARLY_PRICE_ID="price_developer_yearly_test"
STRIPE_STARTUP_MONTHLY_PRICE_ID="price_startup_monthly_test"
STRIPE_STARTUP_YEARLY_PRICE_ID="price_startup_yearly_test"
STRIPE_BUSINESS_MONTHLY_PRICE_ID="price_business_monthly_test"
STRIPE_BUSINESS_YEARLY_PRICE_ID="price_business_yearly_test"

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENABLED=false
