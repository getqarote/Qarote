# RabbitHQ Infrastructure Environment Configuration - Production
# Copy this file to .env and configure your values

# ========================================
# Dokku Server Configuration
# ========================================

# Your Dokku server IP or hostname
DOKKU_HOST=your-server-ip

# Domain configuration
DOMAIN_BACKEND=api.yourdomain.com
DOMAIN_FRONTEND=yourdomain.com

# ========================================
# Backend Environment Variables
# ========================================
# These are mapped from back-end/.env.example

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=production
ENVIRONMENT=production
LOG_LEVEL=info

# Security
JWT_SECRET=your-ultra-secure-production-jwt-secret-change-this-now
ENCRYPTION_KEY=your-ultra-secure-32-char-production-key

# PostgreSQL Connection (will be auto-configured by Dokku)
DATABASE_URL=postgresql://postgres:password@localhost:5432/rabbithq_production

# API Configuration
CORS_ORIGIN=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Email Configuration
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=support@yourdomain.com

# Stripe Configuration (LIVE KEYS for production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_DEVELOPER_MONTHLY_PRICE_ID="price_developer_monthly_live"
STRIPE_DEVELOPER_YEARLY_PRICE_ID="price_developer_yearly_live"
STRIPE_STARTUP_MONTHLY_PRICE_ID="price_startup_monthly_live"
STRIPE_STARTUP_YEARLY_PRICE_ID="price_startup_yearly_live"
STRIPE_BUSINESS_MONTHLY_PRICE_ID="price_business_monthly_live"
STRIPE_BUSINESS_YEARLY_PRICE_ID="price_business_yearly_live"

# Sentry Configuration
SENTRY_DSN=https://your-production-sentry-dsn-here
SENTRY_ENABLED=true

# Node.js Security
NODE_TLS_REJECT_UNAUTHORIZED=1

# ========================================
# Frontend Environment Variables
# ========================================
# These are mapped from front-end/.env.example

VITE_API_URL=https://api.yourdomain.com

VITE_SENTRY_DSN=https://your-frontend-production-sentry-dsn-here
VITE_SENTRY_ENABLED=true

VITE_APP_VERSION=1.0.0

# ========================================
# Hetzner Cloud Configuration (Optional)
# ========================================
# Required only if using automated server creation
# Get your API token from: https://console.hetzner.cloud/projects

HETZNER_API_TOKEN=your-hetzner-api-token