{
  "name": "qarote",
  "description": "RabbitMQ Dashboard Monitoring Tool",
  "private": true,
  "author": "La  Griffe",
  "license": "ISC",
  "keywords": [
    "rabbitmq",
    "dashboard",
    "monitoring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LaGriffe/rabbit-dash-board.git"
  },
  "workspaces": [
    "apps/app",
    "apps/api",
    "apps/web",
    "apps/portal",
    "infrastructure"
  ],
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:app": "npm run dev --workspace=apps/app",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:api:alert": "npm run dev:alert --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:portal": "npm run dev --workspace=apps/portal",
    "prepare": "husky || true",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,tsx}": [
      "bash -c 'cd apps/api && npx eslint --fix \"$@\"' _",
      "bash -c 'cd apps/api && npx prettier --write \"$@\"' _"
    ],
    "apps/app/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd apps/app && npx eslint --fix --max-warnings=-1 \"$@\"' _",
      "bash -c 'cd apps/app && npx prettier --write \"$@\"' _"
    ],
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd apps/web && npx eslint --fix --max-warnings=-1 \"$@\"' _",
      "bash -c 'cd apps/web && npx prettier --write \"$@\"' _"
    ],
    "apps/portal/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd apps/portal && npx eslint --fix --max-warnings=-1 \"$@\"' _",
      "bash -c 'cd apps/portal && npx prettier --write \"$@\"' _"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "syncpack": "^13.0.4"
  },
  "overrides": {
    "vite": "7.2.7",
    "next": "16.0.10",
    "@react-email/preview-server": {
      "next": "16.0.10"
    }
  }
}
