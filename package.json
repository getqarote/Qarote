{
  "name": "rabbithq",
  "description": "RabbitMQ Dashboard Monitoring Tool",
  "private": true,
  "author": "La  Griffe",
  "license": "ISC",
  "keywords": [
    "rabbitmq",
    "dashboard",
    "monitoring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LaGriffe/rabbit-dash-board.git"
  },
  "workspaces": [
    "front-end",
    "back-end",
    "infrastructure"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:front": "npm run dev --workspace=front-end",
    "dev:back": "npm run dev --workspace=back-end",
    "build": "npm run build --workspace=back-end",
    "start": "npm run start --workspace=back-end",
    "prepare": "husky"
  },
  "lint-staged": {
    "back-end/**/*.{ts,tsx}": [
      "bash -c 'cd back-end && npx eslint --fix \"$@\"' _",
      "bash -c 'cd back-end && npx prettier --write \"$@\"' _"
    ],
    "front-end/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd front-end && npx eslint --fix --max-warnings=-1 \"$@\"' _",
      "bash -c 'cd front-end && npx prettier --write \"$@\"' _"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
